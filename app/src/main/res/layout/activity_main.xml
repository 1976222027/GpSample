<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00bfff"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btOpenDialogue"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="40dip"
            android:background="#00A398"
            android:onClick="openPortDialogueClicked"
            android:text="打开连接对话" />

        <Button
            android:id="@+id/btPrintTestPage"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="printTestPageClicked"
            android:text="打印测试页" />

        <Button
            android:id="@+id/btGetStatus"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="getPrinterStatusClicked"
            android:text="获取打印机状态" />

        <Button
            android:id="@+id/btGetPrinterCommandType"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="getPrinterCommandTypeClicked"
            android:text="获取命令类型" />

        <Button
            android:id="@+id/btPrintReceipt"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="printReceiptClicked"
            android:text="打印收据" />

        <Button
            android:id="@+id/btPrintReceiptByArabic"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="printArabicReceiptClicked"
            android:text="打印阿拉伯字" />

        <Button
            android:id="@+id/btPrintLabel"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="printLabelClicked"
            android:text="打印条码" />

        <EditText
            android:id="@+id/etPrintCopies"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:inputType="number"
            android:text="10" />

        <Button
            android:id="@+id/btPrintTest"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="printTestClicked"
            android:text="连续打印" />

        <Button
            android:id="@+id/btCustomerDisplay"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:onClick="customerDisplayerClicked"
            android:text="客显" />

        <CheckBox
            android:id="@+id/btCheckBox"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dip"
            android:layout_marginTop="10dip"
            android:background="#00A398"
            android:text="参与用户体验" />
    </LinearLayout>

</ScrollView>